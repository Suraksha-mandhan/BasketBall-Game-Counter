<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamA_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="Team A"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="24dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="50sp" />

            <Button
                android:id="@+id/teamA_inc_3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_dark"
                android:text="+3 pts."
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/teamA_inc_5"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_dark"
                android:text="+5 pts."
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Button
                android:id="@+id/teamA_free"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Free Throw"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/teamB_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Team B"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/teamB_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:layout_margin="24dp"
                android:textColor="@android:color/black"
                />
            <Button
                android:id="@+id/teamB_inc_3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="+3 pts."
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_dark"
                />
            <Button
                android:id="@+id/teamB_inc_5"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="+5 pts."
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_dark"
                />

            <Button
                android:id="@+id/teamB_free"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_dark"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Reset"
        android:background="@android:color/holo_orange_dark"
        android:layout_margin="36dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>